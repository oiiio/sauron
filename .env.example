# LLM Provider Configuration
# Choose your provider: openai, anthropic, or gemini
LLM_PROVIDER=openai

# Model Selection (provider-specific)
# OpenAI models: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# Anthropic models: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229
# Gemini models: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
LLM_MODEL=gpt-4o-mini

# API Keys (set the one for your chosen provider)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LangSmith (optional, for additional observability)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=sauron-gandalf
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Server configuration
HOST=0.0.0.0
PORT=8000
